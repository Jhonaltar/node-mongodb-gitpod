<%- include('partials/_header'); -%>

<!-- form -->

<div class="container">
	<div class="row">
		<div class="col-md-5 offset-md-3">
			<div class="card">
				<div class="card-body">
					<form action="/update/<%= task._id %>" method="post">
						<div class="form-group">
							<input type="text" name="title" placeholder="Ingrese un titulo" class="form-control" value="<%= task.title %>">
                            </div>
							<div class="form-group">
								<textarea name="description" cols="80" class="form-control" placeholder="Ingrese un titulo"><%= task.description %></textarea>
							</div>
							<% if (task.status == true) { %>
							<div class="form-group form-check">
								<input type="checkbox" class="form-check-input" name="status" value="<%= task.status ? 'false' : 'true' %>" >
								<label class="form-check-label" for="exampleCheck1">Desactivar</label>
							</div>
							<% } else { %>
							<div class="form-group form-check">
								<input type="checkbox" class="form-check-input" name="status" value="<%= task.status ? 'false' : 'true' %>">
								<label class="form-check-label" for="exampleCheck1">Activar</label>
							</div>
							<% } %>

							<!-- <div class="form-group form-check">
								<input type="checkbox" class="form-check-input" name="status" value="<%= task.status ? 'true' : 'false' %>"  >
								<label class="form-check-label" for="exampleCheck1">Activar</label>
							</div> -->

							<!-- <div class="form-group form-check">
								<input type="checkbox" class="form-check-input" name="status" value="<%= task.status ? 'true' : 'false' %>" <%= task.status ? 'checked' : '' %> >
								<label class="form-check-label" for="exampleCheck1">Activar</label>
							</div> -->

							

							<button type="submit" class="btn btn-primary btn-block"> Actualizar Datos
                            </button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

<%- include('partials/_footer'); -%>